{
  "rootDir": "../../",
  "preset": "ts-jest",
  "setupFiles": ["<rootDir>/config/test/polyfills.js"],
  "restoreMocks": true,
  "moduleNameMapper": {
    "^common/(.*)$": "/src/common/$1",
    "^core/(.*)$": "/src/core/$1",
    "^layout/(.*)$": "/src/layout/$1",
    "^pods/(.*)$": "/src/pods/$1",
    "^scenes/(.*)$": "/src/scenes/$1"
  }
}