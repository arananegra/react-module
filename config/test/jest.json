{
  "rootDir": "../../",
  "preset": "ts-jest",
  "restoreMocks": true,
  "transformIgnorePatterns": ["<rootDir>/node_modules/"],
  "moduleNameMapper": {
    "^common/(.*)$": "/src/common/$1",
    "^core/(.*)$": "/src/core/$1",
    "^layout/(.*)$": "/src/layout/$1",
    "^pods/(.*)$": "/src/pods/$1",
    "^scenes/(.*)$": "/src/scenes/$1"
  },
  "setupFilesAfterEnv": ["@testing-library/react/cleanup-after-each"]
}