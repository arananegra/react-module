{
  "rootDir": "../../",
  "preset": "ts-jest",
  "setupFiles": ["<rootDir>/config/test/polyfills.js"],
  "restoreMocks": true,
  "transformIgnorePatterns": ["<rootDir>/node_modules/"],
  "moduleNameMapper": {
    "^common/(.*)$": "/src/common/$1",
    "^core/(.*)$": "/src/core/$1",
    "^layout/(.*)$": "/src/layout/$1",
    "^pods/(.*)$": "/src/pods/$1",
    "^scenes/(.*)$": "/src/scenes/$1",
    "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
    "\\.(gif|ttf|eot|svg|png)$": "<rootDir>/__mocks__/fileMock.js"
  }
}