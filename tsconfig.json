{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "noLib": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src/",
    "paths": {
      "layout": ["layout"],
      "scenes": ["scenes"],
      "core": ["core"],
      "pods": ["pods"],
      "common": ["common"]
    }
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}